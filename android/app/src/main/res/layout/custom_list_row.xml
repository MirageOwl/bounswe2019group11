<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/text_margin"
        android:text="@string/test_title"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_alignTop="@id/item_title"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/text_margin"
        android:text="@string/test_content"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/item_user_pic"
        android:layout_alignBottom="@id/item_content"
        android:layout_marginEnd="-92dp"
        android:layout_marginBottom="-26dp"
        android:text="@string/test_username" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/item_content"
        android:layout_alignBottom="@id/item_content"
        android:layout_marginBottom="-25dp"
        android:text="@string/test_date" />

    <ImageView
        android:id="@+id/item_user_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/item_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginBottom="-31dp"
        android:contentDescription="@string/profile_image_description"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>